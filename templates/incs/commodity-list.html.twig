    <div class="row">
            {% for commodity in commodities %}
                <div class="col col-12 col-sm-12 col-md-12 col-lg-4">
                    <div class="card mb-4">
                        <img class="card-img-top" src="https://via.placeholder.com/150" height="200px" alt="Card image cap">
                        <div class="card-body">
                            <h5 class="card-title">{{ commodity.title }}</h5>
                            <p class="card-text">{{ commodity.description }}</p>
