{% extends 'base.html.twig' %}

{% block title %}{{parent()}} Mon profil{% endblock %}

{% block body %}
    <div class="container">

    {% set is_current_user = app.user == user %}
    <section class="row my-4 mb-3">
        <div class="col col-4 col-sm-5 col-md-3 col-lg-3">
            <img class="img-fluid"
                 src="http://placehold.it/300x300"
                 alt="Avatar">
            {% if is_granted('ROLE_ADMIN') %}
                <a class="btn btn-danger mt-2" href="{{ path('admin') }}"><i class="fas fa-user mr-2"></i>Administration</a>
            {% endif %}
        </div>
        <div class="col col-8 col-sm-7 col-md-9 col-lg-9">
            <h2>{{ user.firstname }} {{ user.lastname }}</h2>
            <p>{{ user.email }}</p>
            {% if is_current_user %}
                <a class="btn btn-sm btn-danger" href="{{ path('logout') }}"><i
                            class="fas fa-power-off mr-2"></i>Déconnexion</a>
            {% endif %}
        </div>
        <div class="mt-3 ml-3">
        {% if user.business != null %}
            <h4 class="mt-4">{% if is_current_user %}MON COMMERCE{% else %}COMMERCE{% endif %}</h4>
            <div style="width: 100%">
                <div class="card w-100 radius">
                    <img class="card-img-top" src="http://placehold.it/300x100" alt="Commerce image" >
                    <div class="card-body">
                        <h5 class="card-title">{{ business.name }}</h5>
                        <i>{{ business.address }}<br /></i>
                        <i>{{ business.phoneNumber }}</i>
                        <p class="card-text mt-2">{{ business.description }}</p>
                        <div class="btn-group">
                            <a class="btn btn-primary mr-2"><i class="fas fa-list mr-2"></i>Voir les denrées</a>
                            {% if is_current_user %}
                                <a href="{{ path('business_detail', {id: business.id}) }}" class="btn btn-warning"><i class="fas fa-pencil mr-2"></i>Gestion du commerce</a>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        {% endif %}
        </div>

    </section>
