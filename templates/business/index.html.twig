{% extends 'base.html.twig' %}

{% block title %}{{parent()}} Commerces{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
    <div class="pt-4">
{#        <h2>COMMERCES</h2>#}
        <section class="row">
            {% for b in business %}
                <div class="col col-12 col-sm-12 col-md-12 col-lg-4">
                    <div class="card radius mb-4">
                        <img class="card-img-top" src="https://via.placeholder.com/150" height="200px" alt="Card image cap">
                        <div class="card-body">
                            <h5 class="card-title">{{ b.name }}</h5>
                            <p class="card-text">{{ b.description }}</p>
                            <a href="#" class="btn btn-primary">Go somewhere</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </section>
    </div>
{% endblock %}
