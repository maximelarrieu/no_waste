{% extends "base.html.twig" %}

{% block title %}{{ parent() }} Formulaire de {% if commodity != null %} {{ commodity.title }} {% endif %}produit{% endblock %}

{% block body %}
    <div class="container">
        <h2>FORMULAIRE DE PRODUIT</h2>
        {% if commodity != null %}
            <h3>{{ commodity.title }}</h3>
        {% endif %}
        {{ form_start(form) }}
        {{ form_widget(form) }}
        <button type="submit" class="btn btn-success mb-4"><i class="fas fa-check mr-2"></i>Confirmer</button>
        {{ form_end(form) }}
    </div>
{% endblock %}